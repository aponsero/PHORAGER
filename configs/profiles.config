// Execution Profiles Configuration

profiles {
    standard {
        // DEFAULT profile - manual singularity handling
        conda.enabled = false  // Disable conda for singularity execution
    }
    
    singularity {
        // Explicit singularity profile
        conda.enabled = false  // Disable conda for singularity execution
    }
    
    conda {
        // Conda execution profile
        conda.enabled = true
    }
}